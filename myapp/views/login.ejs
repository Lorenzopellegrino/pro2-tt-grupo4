<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include("./partials/head") %>

<body>
	
    <!-- Header -->
	<% if (locals.user != undefined) {%>
        <%- include("./partials/headerLogueado") %>
    <% } else { %>
        <%-include("./partials/header") %>
    <% } %>
<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ingresar</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
            <form class="formulario" action="/users/profile" method="post">
                <label class="form-label" for="email">Email</label><br>
                <input class="form-input" type="email" id="email" name="email" required><br>
                <% if (locals.errors && errors.email) { %>
					<p class = "feedback"><%= errors.email.msg %></p>
					<% } %>
                
                <label class="form-label" for="password">Contrase√±a</label><br>
                <input class="form-input" type="password" name="password" id="password" required><br>
                <% if (locals.errors && errors.password) { %>
					<p class = "feedback"><%= errors.password %></p>
					<% } %>

                <div class="div-recordar">
                    <label class="formulario-label" for="remember">Recordarme</label><br>
                    <input class="recordar" type="checkbox" id="remember" name="remember">

                    <button type="submit">Iniciar Sesion </button>
                </div>
                
            </form>
        </div>
    </div>

            <%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>